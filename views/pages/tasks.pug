extends ../layout

block content
  .container
    h1 TO-DO List
    h3
      | Welcome to the Todo app by 
      a(href='https://github.com/yasminagavalda') Yasmina Gavald√†
      | . Please enjoy.
    br
    .search
      button.doneAll.btn.btn-success All done
      form(action="tasks", method="POST")
        .input-group
          input.btn(name="task" placeholder="Add a new task")
          button.btn.btn-info Add task
    br
    ul.todoTasks
      if tasks.length === 0
        p.notasks No tasks....
      each task, i in tasks
        if task.done === false
          li.task-item
            button.done.btn.btn-success.pull-left(data-id=task.id) Done
            .info-task
              span.taskname= i+1 + '.'
              span.name= task.name
              button.remove.btn.btn-danger.pull-right(data-id=task.id) Delete task
              br
              span.time.hidden-xs= task.dateCreated
          


